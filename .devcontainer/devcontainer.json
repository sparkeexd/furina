// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
    "name": "Dev Container",
    "dockerComposeFile": "../compose.yaml",
    "service": "furina",
    "workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": { "moby": false },
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {},
        "ghcr.io/itsmechlark/features/postgresql:1": {},
        "ghcr.io/devcontainers-extra/features/nestjs-cli:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens",
                "github.copilot",
                "github.copilot-chat",
                "github.vscode-github-actions",
                "ms-azuretools.vscode-docker",
                "orta.vscode-jest"
            ]
        }
    },
    "postStartCommand": "bash ${containerWorkspaceFolder}/.devcontainer/script.sh ${containerWorkspaceFolder}",
    "remoteUser": "root"
}
